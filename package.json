{
  "name": "@scaleleap/renovate-config",
  "description": "Renovate shareable config presets",
  "license": "MIT",
  "author": {
    "name": "Roman Filippov",
    "email": "roman@scaleleap.com",
    "url": "https://www.scaleleap.com/"
  },
  "homepage": "https://github.com/ScaleLeap/renovate-config/#readme",
  "repository": {
    "type": "git",
    "url": "git@github.com:ScaleLeap/renovate-config.git"
  },
  "bugs": {
    "url": "https://github.com/ScaleLeap/renovate-config/issues"
  },
  "version": "1.6.0",
  "main": "lib/index.js",
  "files": [
    "/lib"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc --build tsconfig.build.json",
    "clean": "rimraf lib",
    "dev": "ts-node-dev --respawn --transpileOnly src",
    "lint": "eslint --ext ts,js src/ test/",
    "lint:fix": "npm run lint -- --fix",
    "semantic-release": "npx @scaleleap/semantic-release-config",
    "start": "ts-node --transpile-only --pretty src",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "types": "lib/index.d.ts",
  "devDependencies": {
    "@scaleleap/utils": "1.8.63",
    "@types/jest": "26.0.19",
    "@types/node": "13.13.4",
    "danger": "10.6.0",
    "jest": "26.6.3",
    "renovate": "24.27.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.1",
    "tsconfigs": "4.0.2",
    "typescript": "4.1.3"
  },
  "keywords": [],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "extends": "@scaleleap/semantic-release-config"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "@scaleleap:base",
        "@scaleleap:devDependencies",
        "@scaleleap:minorDependencies",
        "@scaleleap:monthly",
        "@scaleleap:types"
      ]
    },
    "base": {
      "extends": [
        "config:base",
        "monorepo:pollyjs"
      ],
      "labels": [
        "renovatebot"
      ],
      "schedule": [
        "every weekday"
      ],
      "semanticCommits": "enabled",
      "timezone": "Etc/UTC"
    },
    "devDependencies": {
      "packageRules": [
        {
          "depTypeList": [
            "devDependencies"
          ],
          "automerge": true
        }
      ]
    },
    "minorDependencies": {
      "packageRules": [
        {
          "updateTypes": [
            "minor",
            "patch",
            "pin",
            "digest"
          ],
          "automerge": true
        }
      ]
    },
    "typescriptEslint": {
      "packageRules": [
        {
          "packagePatterns": [
            "^@typescript-eslint/"
          ],
          "schedule": [
            "before 3am on the first day of the month"
          ]
        }
      ]
    },
    "types": {
      "packageRules": [
        {
          "packageNames": [
            "@types/node"
          ],
          "schedule": [
            "before 3am on the first day of the month"
          ]
        }
      ]
    },
    "monthly": {
      "packageRules": [
        {
          "packagePatterns": [
            "@scaleleap/utils",
            "^@typescript-eslint/",
            "jest",
            "^aws-sdk$",
            "^aws-cdk",
            "^@aws-cdk/"
          ],
          "schedule": [
            "before 3am on the first day of the month"
          ]
        }
      ]
    }
  }
}
